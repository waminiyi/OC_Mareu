<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_filter</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Filter"</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textSize">@dimen/top_app_bar_text_size</item>
    </style>

    <style name="ExtendedFabStyle" >
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/darkblue</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:layout_marginBottom">@dimen/save_button_margin_bottom</item>
    </style>

    <style name="DetailsToolBarStyle"  >
        <item name="android:textSize">@dimen/top_app_bar_text_size</item>
        <item name="android:background">@drawable/toolbar_background</item>
        <item name="titleTextColor">@color/white</item>

    </style>

</resources>