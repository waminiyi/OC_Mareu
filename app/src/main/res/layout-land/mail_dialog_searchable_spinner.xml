<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mail_dialog_box_width"
    android:layout_height="@dimen/mail_dialog_box_height"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin_top">

    <TextView
        android:id="@+id/dialog_mail_research_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mail_dialog_textview_margin_top"
        android:layout_gravity="center"
        android:text="@string/find_attendee_label"
        android:textSize="@dimen/title_size"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mail_validation_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/mail_dialog_fab_margin_top"
        android:layout_marginEnd="@dimen/mail_dialog_fab_margin_end"
        app:backgroundTint="@color/darkblue"
        app:srcCompat="@drawable/ic_validate"
        app:fabSize="mini"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/dialog_mail_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/mail_example_placeholder"
        android:padding="@dimen/research_edittext_padding"
        android:singleLine="true"
        android:textSize="@dimen/subtitle_size" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_mail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size" />


</LinearLayout>