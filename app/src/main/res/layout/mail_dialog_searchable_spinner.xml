<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/mail_dialog_box_width"
    android:layout_height="@dimen/mail_dialog_box_height"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin_top">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/mail_validation_linear_layout_margin"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/mail_dialog_textview_margin_top">

    <TextView
        android:id="@+id/dialog_mail_research_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/find_attendee_label"
        android:textSize="@dimen/title_size"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/mail_validation_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mail_dialog_fab_margin_start"
        android:layout_gravity="center_vertical"
        app:backgroundTint="@color/darkblue"
        app:srcCompat="@drawable/ic_validate"
        app:tint="@color/white" />
    </LinearLayout>

    <EditText
        android:id="@+id/dialog_mail_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="@string/mail_example_placeholder"
        android:padding="@dimen/research_edittext_padding"
        android:singleLine="true"
        android:textSize="@dimen/subtitle_size" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dialog_mail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_size" />


</LinearLayout>